{
  "$schema": "http://json-schema.org/schema",
  "$id": "HelloSchematics",
  "title": "Hello Options Schema",
  "type": "object",
  "description": "Says hello to someone",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the interface",
      "$default": {
        "$source": "argv",
        "index": 0
      },
      "x-prompt": "What is your interface name?"
    },
    "transform": {
      "type": "boolean",
      "default": false
    },
    "project": {
      "type": "string"
    },
    "path": {
      "type": "string"
    }
  },
  "required": [ "name" ]
}